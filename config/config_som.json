{
	"files":{
		"genome_build": "hg19",
		"ratio_file":{
			"column_names":{
				"chromosome": "chromosome",
				"start":"start",
				"end":"end",
				"gene": "gene",
				"log2FC": "log2",
				"weight": "weight"
			},
            "field_separator": "\t",
			"off_target_label": "Antitarget",
			"off_target_low_conf_log2": -10,
			"weight_scaling_factor": 10
		},
		"genome_file":{
			"column_names":{
				"chromosome": "chromosome",
				"chr_length": "length",
				"chr_cumulative_length": "length_cumsum"
			},
            "field_separator": "\t"
		},
		"segmentation_file":{
			"column_names":{
				"chromosome": "chromosome",
				"start": "start",
				"end": "end",
				"log2FC": "log2",
				"gene": "gene",
				"major_cn": "mcn",
				"minor_cn": "lcn",
				"cell_frac": "cf"
			},
            "field_separator": "\t"
		},
		"gene_file":{
			"column_names":{
				"chromosome": "chromosome",
				"start": "start",
				"end": "end",
				"gene": "gene",
				"log2FC": "log2"
			},
            "field_separator": "\t",
			"loss_threshold": -0.4,
			"deep_loss_threshold": -1.2,
			"gain_threshold" : 0.4,
			"amp_threshold": 1.5
		},
		"annotation_file":{
			"column_names":{
				"chromosome": "chromosome",
				"exon_start": "exonStarts",
				"exon_end": "exonEnds",
				"tx_id": "name",
				"exon_number": "exon_number",
				"gene": "name2"
			},
            "field_separator": "\t"
		},
		"vcf_file":{
			"info_fields":{
				"depth": "TC",
				"forward_alt_reads": "NF",
				"reverse_alt_reads": "NR"
			},
			"thresholds":{
				"depth": 20,
				"forward_alt_reads": 5,
				"reverse_alt_reads": 5,
				"low_vaf_filter": 0.02,
				"high_vaf_filter": 0.98
			}
		}
	},
	"plots":{
		"bokeh_js_css_code": "CDN",
		"logFC_genome_plot":{
			"width": 1200,
			"height": 250,
			"output_backend": "webgl",
			"active_scroll": "xwheel_zoom",
			"title": "Genome Level CNV",
			"point_line_color": "black",
			"point_off_target_color": "lightgrey",
			"point_on_target_color": "red",
			"segment_markers":{
				"visibility": "on",
				"segment_line_color": "orange",
				"segment_line_width": 4,
				"segment_line_alpha": 0.9
			},
			"gene_markers":{
				"visibility": "on",
				"color": "violet"
			},
			"artifact_mask":{
				"visibility": "on",
				"color": "black",
				"alpha": 0.7
			},
			"x_axis_label_visibility": "on",
			"x_axis_label": "Genome Location",
			"y_axis_label_visibility": "on",
			"y_axis_label": "log2(FC)"
		},
		"annotation_plot":{
			"width": 1200,
			"height": 80,
			"output_backend": "webgl",
			"active_scroll": "xwheel_zoom",
			"title": "Gene annotation track",
			"line_color": "blue",
			"line_width": 20,
			"line_alpha": 0.9
		},
		"logFC_ind_plot":{
			"width": 1200,
			"height": 250,
			"output_backend": "webgl",
			"active_scroll": "xwheel_zoom",
